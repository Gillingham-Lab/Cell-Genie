<div{{ attributes.defaults({class: "p-0 m-0"}) }}>
    <twig:Layout:Col class="p-0 m-0 mb-3">
        <twig:Live:Search :formId="liveSearchFormType" :formType="liveSearchFormType" title="Search cells" :formData="searchResults" />
    </twig:Layout:Col>

    {% set block_content %}
        <p class="text-muted">{{ computed.table.maxNumberOfRows }} cells have been found.</p>

        <nav>
            <ul class="pagination">
                <li class="page-item {{ page<=0 ? "disabled" : "" }}">
                    <a class="page-link" data-action="live#action" data-live-action-param="firstPage">First</a>
                </li>

                <li class="page-item {{ page<=0 ? "disabled" : "" }}">
                    <a class="page-link" data-action="live#action" data-live-action-param="previousPage" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                <li class="page-item active" aria-current="page">
                    <span class="page-link">Page {{ page+1 }}</span>
                </li>

                <li class="page-item {{ page+1>=computed.lastPageNumber ? "disabled" : "" }}">
                    <a class="page-link" data-action="live#action" data-live-action-param="nextPage" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>

                <li class="page-item {{ page+1 >= computed.lastPageNumber ? "disabled" : "" }}">
                    <!-- {{ page+1 }} >= {{ computed.lastPageNumber }} -->
                    <a class="page-link" data-action="live#action" data-live-action-param="lastPage">Last</a>
                </li>
            </ul>
        </nav>

        <twig:Table table="{{ computed.table }}" data-loading="addClass(opacity-50)" />
    {% endset %}

    <twig:Layout:Col class="p-0 m-0 mb-3">
        <twig:ElementCard title="Results">
            {{ block_content }}
        </twig:ElementCard>
    </twig:Layout:Col>
</div>
