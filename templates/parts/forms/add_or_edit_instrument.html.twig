{% extends 'parts/forms/base_form.html.twig' %}
{% import 'macros.html.twig' as macros %}
{% import 'layout.html.twig' as layout %}
{% import 'utility/icons.html.twig' as icon %}

{% block title %}
    {% if new %}
        Gin :: Instrument :: Add
    {% else %}
        Gin :: Instrument :: Edit :: {{ instrument.instrumentNumber }} {{ instrument.shortName }}
    {% endif %}
{% endblock %}

{% block form_header %}
    {% if new %}
        <twig:PageHeader title="Add new instrument" icon="instrument" barcode />
    {% else %}
        <twig:PageHeader title="{{ [instrument.instrumentNumber, instrument.shortName]|join(" | ") }}" icon="instrument" barcode />
    {% endif %}
{% endblock %}