{% extends 'homepage.html.twig' %}
{% import 'macros.html.twig' as macros %}
{% import 'parts/cells/cell_macros.html.twig' as cell_macros %}

{% macro cell_tools(cell=null) %}
    {% if cell == null %}
        <div class="btn-group btn-group-sm mr-3" style="visibility: hidden">
            <span class="btn btn-primary btn-sm"><span class="far fa-clipboard"></span></span>
            <span class="btn btn-primary btn-sm"><span class="fa fa-eye"></span></span>
        </div>
    {% else %}
        <div class="btn-group btn-group-sm mr-3">
            {% if cell.rrid %}
                <a
                        class="btn btn-primary btn-sm btn-clipboard"
                        data-clipboard-text="{{ cell.name }} ({{ cell.rrid ? "RRID:" ~ cell.rrid : "" }})"
                >
                    <span class="far fa-clipboard"></span>
                </a>
            {% else %}
                <span class="btn btn-outline-secondary btn-sm disabled"><span class="far fa-clipboard"></span></span>
            {% endif %}
            <a href="{{ cell_macros.url_cell(cell) }}" class="btn btn-primary btn-sm"><span class="fa fa-eye"></span></a>
        </div>
    {% endif %}
{% endmacro %}


{% block title %}Cell Genie: Cells{% endblock %}

{% block body_main %}
    <div class="row p-3">
        <div class="col col-12 p-5 bg-white mb-3 border">
            <div class="row">
                <h1 class="col">Cells</h1>

                <div class="col text-right">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="button" class="btn btn-secondary"><span class="fas fa-fw fa-plus"></span></button>
                        {# <button type="button" class="btn btn-secondary"><span class=""></span></button>
                <button type="button" class="btn btn-secondary"><span class=""></span>Right</button> #}
                    </div>
                </div>
            </div>
        </div>

        <div class="col col-12 p-5 bg-white mb-3 border">
            <table class="table table-hover fancyTable">
                <thead>
                <tr>
                    <th>
                        {{ _self.cell_tools() }}
                    </th>
                    <th scope="col">
                        Nr
                    </th>
                    <th scope="col">Name</th>
                    <th scope="col">Organism</th>
                    <th scope="col">Tissue</th>
                    <th scope="col">Morphology</th>
                    <th scope="col">Aliquotes (Unique)</th>
                    <th scope="col">Cancer</th>
                    <th scope="col">Engineered</th>
                    <th scope="col">RRID</th>
                </tr>
                </thead>
                <tbody>
                {% for cell in cells %}
                    <tr>
                        <td>
                            {{ _self.cell_tools(cell) }}
                        </td>
                        <td>
                            <strong>{{ cell.cellNumber }}</strong>
                        </td>
                        <td>{{ cell.name }}</td>
                        <td>{{ cell.organism ? cell.organism.name : "undefined" }}</td>
                        <td>{{ cell.tissue ? cell.tissue.name : "undefined" }}</td>
                        <td>{{ cell.morphology ? cell.morphology.name : "undefined" }}</td>
                        <td>{% if cell.cellAliquotes|length > 0 %}
                                {% set aliquoteCount = 0 %}
                                {% for aliquote in cell.cellAliquotes %}
                                    {% set aliquoteCount = aliquoteCount + aliquote.vials %}
                                {% endfor %}
                                {{ aliquoteCount }} ({{ cell.cellAliquotes|length }})
                            {% else %}
                                0
                            {% endif %}</td>
                        <td>{{ cell.isCancer ? "Yes" : "No" }}</td>
                        <td>{{ cell.isEngineered ? "Yes" : "No" }}</td>
                        <td>{{ cell.rrid ? macros.rrid_resolver(cell.rrid) : "-" }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}