{% extends 'homepage.html.twig' %}

{% block title %}Cell Genie: Compounds{% endblock %}

{% block body_main %}
    <div class="row p-3">
        <div class="col col-12 p-5 bg-white mb-3 border">
            <div class="row">
                <h1 class="col">Compounds</h1>

                <div class="col text-right">
                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="button" class="btn btn-secondary"><span class="fas fa-fw fa-plus"></span></button>
                        {# <button type="button" class="btn btn-secondary"><span class=""></span></button>
                <button type="button" class="btn btn-secondary"><span class=""></span>Right</button> #}
                    </div>
                </div>
            </div>
        </div>

        <div class="col col-12 p-5 bg-white mb-3 border">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col" style="width: 200px">Structure</th>
                    <th scope="col">Short Name</th>
                    <th scope="col">Labjournal</th>
                    <th scope="col"># Experiments</th>
                    <th scope="col">Options</th>
                </tr>
                </thead>
                <tbody>
                {% for chemical in chemicals %}
                    <tr>
                        <td class="align-middle"><canvas data-smiles-type="small" data-smiles="{{ chemical.smiles ? chemical.smiles : "" }}"></canvas></td>
                        <td class="align-middle">{{ chemical.shortName }}</td>
                        <td class="align-middle">{% if chemical.labjournal %}<a class="fa-fw fas fa-external-link-alt" href="#{{ chemical.ulid }}">Lab Journal entry</a>{% else %}No entry{% endif %}</td>
                        <td class="align-middle">{{ chemical.experiments|length > 0 ? chemical.experiments|length : "none" }}</td>
                        <td class="align-middle">
                            <a href="{{ url("app_compound_view", {"compoundId": chemical.ulid}) }}" class="btn btn-info"><span class="fa fa-eye"></span></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}