{% extends 'homepage.html.twig' %}
{% import 'layout.html.twig' as layout %}

{% block title %}Gin :: Recipes{% endblock %}

{% block body_main %}
    <div class="row">
        <div class="container container-fluid w-100 p-0 m-0">
            {{ layout.header("Recipes") }}

            {{ layout.toolbox([
                {
                    "type": "add",
                    "disabled": true,
                    "tooltipText": "Add new antibody",
                },
            ]) }}

            <div class="row">
                <div class="col bg-white mx-3 mb-3 border p-3 p-lg-5 overflow-scroll">
                    <table class="table table-hover fancyTable" data-ft-sort-column=2>
                        <thead>
                            <tr>
                                <th scope="col">
                                <span class="btn-group mr-3" style="visibility: hidden;">
                                    <a class="btn btn-sm btn-primary"><span class="fa fa-eye"></span></a>
                                </span>
                                </th><th>
                                    Short Name
                                </th>
                                <th scope="col">Category</th>
                                <th class="d-none d-lg-table-cell" scope="col">pH</th>
                                <th class="d-none d-lg-table-cell" scope="col">Concentration Factor</th>
                            </tr>
                        </thead>
                        <tbody>

                        {% for recipe in recipes %}
                            <tr>
                                <td class="align-middle">
                                <span class="btn-group mr-3">
                                    <a class="btn btn-sm btn-primary" data-toggle="tooltip" data-placement="bottom" title="Show recipe"
                                       href="{{ url("app_recipe_view", {"recipeId": recipe.id}) }}"
                                    ><span class="fa fa-eye"></span></a>
                                </span>
                                </td><td>
                                    <span data-toggle="tooltip" data-placement="bottom" title="{{ recipe.longName }}">{{ recipe.shortName }}</span>
                                </td>
                                <td class="align-middle">{{ recipe.category }}</td>
                                <td class="d-none d-lg-table-cell" class="align-middle">{{ recipe.pH ?: "-" }}</td>
                                <td class="d-none d-lg-table-cell" class="align-middle">{{ recipe.concentrationFactor }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}