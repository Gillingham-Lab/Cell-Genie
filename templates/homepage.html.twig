{% extends 'base.html.twig' %}

{% block title %}Cell Genie{% endblock %}

{% block body %}
    <div class="container-fluid h-100">
        <div class="row justify-content-center h-100">
            <div class="col-12 col-md-3 col-xl-2 border-right pt-3">
                <h5>Cell cultures</h5>

                <ul class="nav flex-column">
                    <li class="nav-item">
                        <h6><a class="nav-link" href="{{ url("app_cells") }}"><span class="fas fa-fw fa-disease mr-2"></span>Cell database</a></h6>
                    </li>

                    <li class="nav-item">
                        <h6><a class="nav-link" href="#"><span class="fas fa-fw fa-flask mr-2"></span>Experiments</a></h6>
                    </li>

                    <li class="nav-item">
                        <h6><a class="nav-link" href="{{ url("app_compounds") }}"><span class="fas fa-fw fa-tablets mr-2"></span>Compounds</a></h6>
                    </li>

                    <li class="nav-item">
                        <h6><a class="nav-link" href="{{ url("app_proteins") }}"><span class="fas fa-fw fa-bullseye mr-2"></span>Protein Targets</a></h6>
                    </li>
                </ul>
            </div>

            <main class="col-12 col-md-9 col-xl-10 py-md-3 pl-5" role="main">
                {% if app.session.flashbag.peekAll|length > 0 %}
                    {% for type, messages in app.session.flashbag.all %}
                        {% if type == "error" %}
                            {% set css_type = "alert-danger" %}
                        {% else %}
                            {% set css_type = "alert-info" %}
                        {% endif %}

                        {% for message in messages %}
                            <div class="alert {{ css_type }}">
                                {{ message|trans({}, domain|default('messages')) }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                {% endif %}

                {% block body_main %}{% endblock %}
            </main>
        </div>
    </div>

{% endblock %}