{% macro antibody(classOnly=false) %}
    {% if classOnly %}
        icon icon-antibody
    {% else %}
        <span class="icon icon-antibody"></span>
    {% endif %}
{% endmacro %}

{% macro antibody_primary(classOnly=false) %}
    {% if classOnly %}
        icon icon-antibody-primary
    {% else %}
        <span class="icon icon-antibody-primary-twocolor"><span class="path1"></span><span class="path2"></span></span>
    {% endif %}
{% endmacro %}

{% macro antibody_secondary(classOnly=false) %}
    {% if classOnly %}
        icon icon--antibody-secondary
    {% else %}
        <span class="icon icon-antibody-secondary-twocolor"><span class="path1"></span><span class="path2"></span></span>
    {% endif %}
{% endmacro %}

