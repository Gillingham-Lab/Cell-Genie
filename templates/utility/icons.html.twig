{% endmacro %}

{% macro any(any, classOnly=false) %}
    {% if any is substanceAntibody %}
        {{ _self.antibody(classOnly) }}
    {% elseif any is substanceChemical %}
        {{ _self.chemical(classOnly) }}
    {% elseif any is substanceOligo %}
        {{ _self.oligo(classOnly) }}
    {% elseif any is substanceProtein %}
        {{ _self.protein(classOnly) }}
    {% elseif any is substancePlasmid %}
        {{ _self.plasmid(classOnly) }}
    {% elseif any is cell %}
        {{ _self.cell(classOnly) }}
    {% endif %}
{% endmacro %}

{% macro span(class, classOnly=false) %}
    {% if classOnly %}{{ class }}{% else %}<span class="{{ class }}"></span>{% endif %}
{% endmacro %}

{% macro add(classOnly=false) %}
    {{ _self.span("fas fa-fw fa-plus", classOnly) }}
{% endmacro %}

{% macro trash(classOnly=false) %}
    {{ _self.span("fas fa-fw fa-trash-alt", classOnly) }}
{% endmacro %}

{% macro edit(classOnly=false) %}
    {{ _self.span("fa fa-fw fa-pen", classOnly) }}
{% endmacro %}

{% macro rack(classOnly=false, addClass="") %}
    {{ _self.span("fas fa-fw fa-boxes " ~ addClass, classOnly) }}
{% endmacro %}

{% macro box(classOnly=false, addClass="") %}
    {{ _self.span("fas fa-fw fa-box " ~ addClass, classOnly) }}
{% endmacro %}