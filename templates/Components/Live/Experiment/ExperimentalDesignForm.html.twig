<div{{ attributes.defaults({
    "class": "col-12",
}) }}>
    {{ form_start(form, {
        attr: {
            'data-action': 'live#action:prevent',
            'data-live-action-param': 'saveAndReturn'
        }
    }) }}

    {{ form_errors(form) }}

    <twig:Layout:Row cols="1">
        {% set form_groups = form|filter(e => e|length > 0) %}

        {% if form_groups|length > 0 %}
            <twig:Layout:Tabbed>
                {% set tabs = "" %}
                {% set tab_containers = "" %}

                {% for group in form_groups %}
                    {% set tabs %}
                        {{ tabs }}

                        <twig:Layout:Tab
                            key="{{ group.vars.name }}"
                            label="{{ group.vars.label }}"
                            active="{{ loop.index0 == 0 ? true : false }}"
                        />
                    {% endset %}

                    {% set tab_containers %}
                        {{ tab_containers }}

                        <twig:Layout:TabContent
                            key="{{ group.vars.name }}"
                            label="{{ group.vars.label }}"
                            active="{{ loop.index0 == 0 ? true : false }}"
                        >
                            {% for child in group %}
                                {% if not child.rendered %}
                                    <div class="col">
                                        {{ form_row(child) }}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </twig:Layout:TabContent>
                    {% endset %}
                {% endfor %}

                <twig:Layout:Tabs>
                    {{ tabs }}
                </twig:Layout:Tabs>

                <twig:Layout:TabContentContainer>
                    {{ tab_containers }}
                </twig:Layout:TabContentContainer>
            </twig:Layout:Tabbed>
        {% else %}
            {% for child in form.children %}
                <twig:Layout:Col type="none">
                    {{ form_row(child) }}
                </twig:Layout:Col>
            {% endfor %}
        {% endif %}
    </twig:Layout:Row>

    {% block content %}
        <button class="btn btn-primary">Save and return</button>
        {# <button class="btn btn-outline-primary" data-action="live#action:prevent" data-live-action-param="remember">Remember</button>  #}
        <button class="btn btn-outline-primary" data-action="live#action:prevent" data-live-action-param="save">Save</button>
    {% endblock %}

    {{ form_end(form) }}
</div>