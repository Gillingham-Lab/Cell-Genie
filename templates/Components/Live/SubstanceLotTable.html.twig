<div
    {{ attributes.defaults(stimulus_controller('livehelper')) }}
>
    {% if computed.table.data|length > 0 %}
        <p class="text-muted">{{ computed.table.data|length }} {{ computed.table.data|length>1 ? "lots" : "lot"}} found.</p>

        <twig:Table table="{{ computed.table }}" data-loading="addClass(opacity-50)" />
    {% else %}
        <p class="text-muted">There are no registered lots.</p>
    {% endif %}
</div>