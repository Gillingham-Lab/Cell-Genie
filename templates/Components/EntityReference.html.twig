<span{{ attributes }}>
    {% if entity is same as(null) %}
            none
    {% else %}
        {% if iterable %}
            {% for e in entity %}
                <a class="badge {{ this.class(e) }} rounded-pill text-decoration-none" href="{{ this.href(e) ?? "#" }}">
                    <twig:Icon :icon="icon" />
                    {{ e }}
                </a>
            {% else %}
                none
            {% endfor %}
        {% else %}
            <a class="badge {{ this.class(entity) }} rounded-pill text-decoration-none" href="{{ this.href() ?? "#" }}">
                <twig:Icon :icon="icon" />
                {{ entity }}
            </a>
        {% endif %}
    {% endif %}
</span>