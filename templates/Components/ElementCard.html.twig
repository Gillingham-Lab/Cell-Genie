<div{{ attributes.defaults({class: "card mx-1 mx-md-3"}) }}>
    <div class="card-header" id="collapse-{{ computed.id }}-header">
        <h2 class="mb-0">
            <button class="btn btn-lg w-100 text-start"
                    data-bs-toggle="collapse" data-bs-target="#collapse-{{ computed.id }}-content" aria-expanded="false" aria-controls="collapse-{{ computed.id }}-content"
            >
                {% if icon %}<twig:Icon :icon="icon" :stack="iconStack" />{% endif %}
                {{ title }}
            </button>
        </h2>
    </div>

    <div id="collapse-{{ computed.id }}-content" class="collapse overflow-auto {{ collapsed ?: "show" }}" aria-labelledby="collapse-{{ computed.id }}-header">
        <div class="card-body {% if not noPadding %}p-3 px-lg-5{% else %}p-0{% endif %}">
            {% block content %}{% endblock %}
        </div>
    </div>
</div>