<div
    {{ attributes.defaults({
        class: "gin-notices fixed-bottom mb-5 offset-6 col-6 offset-md-8 col-md-4 offset-lg-9 col-lg-3 offset-xl-10 col-xl-2"
    }) }}
    data-poll="delay(5000)|$render"
>
    {% for type, messages in app.session.flashbag.all %}
        {% for message in messages %}
            <twig:Layout:Alert
                message="{{ message }}"
                type="{{ type }}"
            />
        {% endfor %}
    {% endfor %}
</div>