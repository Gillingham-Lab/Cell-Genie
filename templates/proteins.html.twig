{% extends 'homepage.html.twig' %}

{% block title %}Cell Genie: Proteins{% endblock %}

{% block body_main %}
    <h1>Proteins</h1>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Short Name</th>
            <th scope="col">Long Name</th>
            <th scope="col"># Experiments</th>
            <th scope="col"># Antibodies</th>
            <th scope="col">Options</th>
        </tr>
        </thead>
        <tbody>
        {% for protein in proteins %}
            <tr>
                <th class="align-middle">{{ protein.id }}</th>
                <td class="align-middle">{{ protein.shortName }}</td>
                <td class="align-middle">{{ protein.longName }}</td>
                <td class="align-middle">{{ protein.experiments|length }}</td>
                <td class="align-middle">{{ protein.antibodies|length > 0 ? protein.antibodies|length : "none" }}</td>
                <td><a href="{{ url("app_protein_view", {"proteinId": protein.id}) }}" class="btn btn-info"><span class="fa fa-eye"></span></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}